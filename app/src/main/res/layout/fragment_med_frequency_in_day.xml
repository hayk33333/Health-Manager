<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:elevation="20dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_rounded_corners"
        android:padding="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/once_day"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/list_button_bg"
                android:text="@string/once_a_day"
                android:paddingStart="20dp"
                android:textAllCaps="false"

                android:textColor="@color/dark_gray"
                android:gravity="left|center_vertical"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/et_background" />
            <Button
                android:id="@+id/twice_day"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/list_button_bg"
                android:text="@string/twice_a_day"
                android:paddingStart="20dp"
                android:textAllCaps="false"

                android:textColor="@color/dark_gray"
                android:gravity="left|center_vertical"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/et_background" />
            <Button
                android:id="@+id/more_times"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/list_button_bg"
                android:text="@string/more_than_2_times_a_day"
                android:paddingStart="20dp"
                android:textAllCaps="false"

                android:textColor="@color/dark_gray"
                android:gravity="left|center_vertical"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/et_background" />
            <Button
                android:id="@+id/every_x_hours"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/list_button_bg"
                android:text="@string/every_x_hours"
                android:paddingStart="20dp"
                android:textAllCaps="false"

                android:textColor="@color/dark_gray"
                android:gravity="left|center_vertical"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/et_background" />

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

